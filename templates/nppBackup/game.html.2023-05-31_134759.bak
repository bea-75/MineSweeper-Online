{% extends "layout.html" %}

{% set active_page = "play" %}

{% block title %}page2{% endblock %}

{% block content %}
<div class = "row">
    <div class = "col-2 text-light"></div>
    <div class = "col-8"> 
		{{ game }}
		<span>
			<div class = "row">
				<div class = "col-1 text-light"></div>
				<div class = "col-8"> 
					<button class = "selector"><h1 class = "flag">&#128681;</h1> <!-- flag --></button>
					<button class = "selector"><h1 class = "destroy">&#128163;</h1> <!-- bomb --></button>
				</div>
				<div class = "col-2 text-light"></div>
			</div>
		</span>
	</div>
	<div class = "col-2 text-light"></div>
</div>
{% endblock %}



